<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= locals.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="bg-light">
  <div class="container mt-5">
    <h1 class="text-center"><%= locals.title %></h1>

    <% if (locals.errors && locals.errors.length > 0) { %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% locals.errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <% if (locals.title === "Sign Up" && !(locals.user)) { %>
      <form action="" method="POST" class="card p-4 shadow-sm bg-white">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            class="form-control"
            value="<%= locals.email ? locals.email : '' %>"
            required
          >
        </div>
        <div class="mb-3">
          <label for="pw" class="form-label">Password</label>
          <input type="password" id="pw" name="password" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="confirm_password" class="form-label">Confirm Password</label>
          <input type="password" id="confirm_password" name="confirm_password" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
      </form>
    <% } else if (locals.title === "Sign In" && !(locals.user)) { %>
      <form action="" method="POST" class="card p-4 shadow-sm bg-white">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            class="form-control"
            value="<%= locals.email ? locals.email : '' %>"
            required
          >
        </div>
        <div class="mb-3">
          <label for="pw" class="form-label">Password</label>
          <input type="password" id="pw" name="password" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign In</button>
      </form>
    <% } else { %>
      <div class="card p-4 shadow-sm bg-white text-center">
        <h1>Hello, <%= locals.user.email %>.</h1>
        <h2>You're logged in</h2>
        <a href="/log-out" class="btn btn-danger">LOG OUT</a>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-NuI+FfI3tzlC+zwnwVJnV9W8U9Im7CBzB5YP6b9iPjqOd9eCul6TLEUcJ4Od+aKj" crossorigin="anonymous"></script>
</body>

</html>

